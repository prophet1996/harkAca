<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Science Test 1"
        android:fontFamily="sans-serif-thin"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:id="@+id/mcq_text_name"
android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test description"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
    android:layout_below="@+id/mcq_text_name"
        android:gravity="center"
        android:layout_alignEnd="@+id/mcq_text_name"
        android:layout_alignStart="@+id/mcq_text_name"
        android:fontFamily="sans-serif"

        android:id="@+id/mcqtest_description"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/mcqtest_description"
        android:id="@+id/layout_navigation_mcq_recyclerview"
        />

</RelativeLayout>
    </android.support.v7.widget.CardView>

</ScrollView>