<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/cardview_light_background"
    android:layout_margin="10dp"
    tools:context="com.accademy.harvin.harvinacademy.McqActivity">
    <include
        layout="@layout/timer_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="parent"
        android:id="@+id/timer_layout"
        app:layout_constraintEnd_toEndOf="parent"
 />



        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/state_label_completed"
            android:layout_width="wrap_content"
            android:text="Completed"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/badge_green"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/state_label_not_attempted"
          />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/state_label_not_attempted"
            android:text="Not Attempted"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/badge_red"
            app:layout_constraintTop_toBottomOf="@+id/test_progress"
app:layout_constraintStart_toEndOf="@+id/state_label_completed"
            android:layout_margin="10dp"


            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:text="Needs Revision"
            android:layout_margin="10dp"
            android:background="@drawable/badge_orange"
            app:layout_constraintStart_toEndOf="@id/state_label_not_attempted"
     app:layout_constraintTop_toBottomOf="parent"
            android:id="@+id/state_label_revision"
            app:layout_constraintBaseline_toBaselineOf="@+id/state_label_not_attempted"
        />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="7"
            android:id="@+id/state_value_completed"
            android:textSize="30sp"
            android:layout_margin="4dp"
            android:textColor="@color/cardview_dark_background"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@+id/state_label_completed"
            app:layout_constraintBaseline_toBaselineOf="@+id/state_value_not_attempted"
            app:layout_constraintStart_toEndOf="@+id/state_label_completed"
            app:layout_constraintEnd_toStartOf="@id/state_label_completed"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_margin="4dp"
            android:textColor="@color/cardview_dark_background"
            android:fontFamily="sans-serif-light"
            android:text="0"
            android:id="@+id/state_value_not_attempted"
            app:layout_constraintTop_toBottomOf="@+id/state_label_not_attempted"

            app:layout_constraintStart_toEndOf="@id/state_label_not_attempted"
            app:layout_constraintEnd_toStartOf="@id/state_label_not_attempted"

         />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="6"
            android:id="@+id/state_value_revision"
            android:textSize="30sp"
            android:layout_margin="4dp"
            android:textColor="@color/cardview_dark_background"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@+id/state_label_revision"
            app:layout_constraintStart_toEndOf="@+id/state_label_revision"
            app:layout_constraintEnd_toStartOf="@id/state_label_revision"
            app:layout_constraintBaseline_toBaselineOf="@+id/state_value_not_attempted"
         />

    <ImageView
        android:id="@+id/mcq_clipboard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_mcq_clipboard"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:layout_constraintRight_toLeftOf="parent"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_progress" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question_recyclerView_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:background="@drawable/badge_blue"
        app:layout_constraintTop_toBottomOf="@+id/test_progress"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/question_number_label_textview"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/question_number_label_textview"
        app:layout_constraintLeft_toRightOf="@+id/question_number_label_textview"
        app:layout_constraintRight_toLeftOf="@+id/question_number_label_textview"
        app:layout_constraintVertical_bias="1.0"
        android:textSize="30sp"
        android:layout_margin="4dp"
        android:textColor="@color/cardview_dark_background"
        android:fontFamily="sans-serif-light"
        android:id="@+id/question_number_textview"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:elevation="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mcq_clipboard"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:text="Submit"
        android:id="@+id/submit_test_button"
        android:background="?selectableItemBackground"
        android:textColor="@color/badge.blue"
        />
    <ProgressBar
        android:id="@+id/test_progress"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:indeterminate="false"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:progress="50"
        android:max="100"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintRight_toLeftOf="parent" />




</android.support.constraint.ConstraintLayout>
