<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#37474f"
    tools:context="com.accademy.harvin.harvinacademy.McqActivity">
    <include
        layout="@layout/timer_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="parent"
        android:id="@+id/timer_layout"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ProgressBar
        android:id="@+id/test_progress"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:indeterminate="false"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:progress="50"
        android:max="100"
        app:layout_constraintLeft_toRightOf="parent"

        app:layout_constraintRight_toLeftOf="parent" />


        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/state_label_completed"
            android:layout_width="wrap_content"
            android:textColor="#bef67a"
            android:text="Completed"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toStartOf="@+id/state_label_not_attempted"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/state_label_not_attempted"
/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#f44336"
            android:id="@+id/state_label_not_attempted"
            android:text="Not Attempted"
            app:layout_constraintTop_toBottomOf="@+id/test_progress"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_margin="8dp"


            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#fb8c00"
            android:text="Needs Revision"
            android:layout_margin="8dp"
            app:layout_constraintStart_toEndOf="@id/state_label_not_attempted"
     app:layout_constraintTop_toBottomOf="parent"
            android:id="@+id/state_label_revision"
            app:layout_constraintBaseline_toBaselineOf="@+id/state_label_not_attempted"
 />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:text="7"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/state_label_completed"
            app:layout_constraintBaseline_toBaselineOf="@+id/state_value_not_attempted"

            app:layout_constraintStart_toEndOf="@+id/state_label_completed"
            app:layout_constraintEnd_toStartOf="@id/state_label_completed"
/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:text="0"
            android:id="@+id/state_value_not_attempted"
            android:layout_margin="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            app:layout_constraintTop_toBottomOf="@+id/state_label_not_attempted"

            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"

 />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:text="6"
            android:layout_margin="8dp"
            android:id="@+id/state_value_revision"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            app:layout_constraintTop_toBottomOf="@+id/state_label_revision"
            app:layout_constraintStart_toEndOf="@+id/state_label_revision"
            app:layout_constraintEnd_toStartOf="@id/state_label_revision"
            app:layout_constraintBaseline_toBaselineOf="@+id/state_value_not_attempted"
 />

    <ImageView
        android:id="@+id/mcq_clipboard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_mcq_clipboard"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:layout_constraintRight_toLeftOf="parent"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_progress" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question_recyclerView_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total "
        app:layout_constraintTop_toBottomOf="@+id/mcq_clipboard"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/question_number_textview"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/question_number_label_textview"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/mcq_clipboard"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.50"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/question_number_textview"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        />



</android.support.constraint.ConstraintLayout>
