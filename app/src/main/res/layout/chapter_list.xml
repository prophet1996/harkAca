<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:padding="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:elevation="8dp"
    android:minHeight="100dp"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?selectableItemBackground"
        android:id="@+id/chapter_card_layout"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">
        <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearchild"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter"
        android:fontFamily="sans-serif-thin"
        android:textSize="14dp"
        android:textColor="@color/navbarcolor"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/chapter_no" />
    <TextView
        android:id="@+id/chapter_no"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:text="01"
        android:textSize="38dp"
        android:textColor="@color/textcolor"
        android:layout_gravity="center_vertical|center_horizontal"




      />
    </LinearLayout>

    <TextView
        android:id="@+id/chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Reproduction in organisms"
        android:fontFamily="@font/montserrat"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/exam_type"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textColor="@color/textcolor"
        android:layout_toRightOf="@+id/linearchild" />

    <TextView
        android:id="@+id/exam_type"
        android:fontFamily="@font/montserrat"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chapter_title"
        android:text="Looren ipsum ordr lorem ipsumother ordr lorem ipsumother ordr lorem ipsumother ordr l"
        android:layout_alignBottom="@id/linearchild"
        android:layout_toRightOf="@+id/linearchild"

        android:paddingBottom="3dp"
        android:maxLines="2"
        android:minLines="1"

        />


        <ProgressBar
            android:id="@+id/progress_bar_chapter"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_alignStart="@id/exam_type"
            android:max="100"
            android:progress="0"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/exam_type"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_percentage"
            android:fontFamily="sans-serif-thin"

            android:layout_below="@id/progress_bar_chapter"
            android:layout_alignStart="@id/exam_type"

            />

    </RelativeLayout>




    </android.support.v7.widget.CardView>


