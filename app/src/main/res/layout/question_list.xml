<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:padding="10dp"
    android:elevation="8dp"
    android:id="@+id/relativeLayout1"
    android:minHeight="100dp"
    android:layout_margin="14dp"
    android:background="?selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="2dp"
        >

        <TextView
            android:id="@+id/badge_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/downloading_progress"
            android:layout_alignStart="@+id/topic_name"
            android:layout_marginEnd="5dp"
            android:visibility="gone"

            android:background="@drawable/badge_blue"
            android:text="new"


            android:textColor="@color/cardview_light_background"
            android:textSize="8dp"

            />

        <TextView
            android:id="@+id/badge_green"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_above="@+id/downloading_progress"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/badge_blue"
            android:background="@drawable/badge_green"
            android:text="completed"
            android:visibility="gone"
            android:textSize="8dp"


            android:textColor="@color/cardview_light_background"

            />

        <TextView
            android:id="@+id/badge_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/downloading_progress"
            android:layout_toEndOf="@+id/badge_green"
            android:background="@drawable/badge_orange"
            android:text="revision"
            android:visibility="gone"
            android:textColor="@color/cardview_light_background"
            android:textSize="8dp"

            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"


        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearchild"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/exam_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam"
                android:fontFamily="sans-serif-thin"
                android:textSize="14dp"
                android:textColor="@color/navbarcolor"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/chapter_no" />
            <TextView
                android:id="@+id/exam_no"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="01"
                android:textSize="38dp"
                android:textColor="@color/textcolor"
                android:layout_gravity="center_vertical|center_horizontal"




                />
        </LinearLayout>

        <TextView
            android:id="@+id/exam_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="MATHEMATICS TEST#1"
            android:fontFamily="sans-serif-medium"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/exam_type"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/textcolor"
            android:layout_toRightOf="@+id/linearchild" />

        <TextView
            android:id="@+id/exam_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam_name"
            android:text="True-false"
            android:layout_alignBottom="@id/linearchild"
            android:layout_toRightOf="@+id/linearchild"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="3dp"
            android:maxLines="1"


            />


        <TextView
            android:id="@+id/max_marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"

            android:layout_alignBottom="@id/linearchild"
            android:layout_toRightOf="@+id/linearchild"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="3dp"
            android:maxLines="1"


            />



        <ProgressBar
            android:id="@+id/progress_bar_exam"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_alignStart="@id/exam_type"
            android:max="100"
            android:progress="0"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/max_marks"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_percentage"
            android:fontFamily="sans-serif-thin"

            android:layout_below="@id/progress_bar_chapter"
            android:layout_alignStart="@id/exam_type"

            />

    </RelativeLayout>




</android.support.v7.widget.CardView>


