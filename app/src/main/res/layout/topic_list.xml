<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_height="wrap_content"
    android:elevation="8dp"

    >

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/topic_no"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="UNIT" />

        <TextView
            android:id="@+id/topic_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.1"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/unit"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/topic_no"
            android:textSize="18dp"
            android:padding="10dp"
            android:text="Introduction to Relations"

            android:textColor="#000000" />




<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/frame"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    >

    <ProgressBar
        android:indeterminate="false"
        android:progressDrawable="@drawable/progress_bar"
        android:layout_width="35dp"
        android:id="@+id/downloading_progress"
        android:layout_height="35dp"
        android:visibility="invisible"
        android:layout_gravity="center" />

            <Button
                android:id="@+id/download_pdf"
                android:layout_margin="5dp"
                android:background="@mipmap/ic_download"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
</FrameLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>