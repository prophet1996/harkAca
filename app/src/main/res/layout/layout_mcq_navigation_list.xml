<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_navigation_list_card"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/margin_tiny"
    android:layout_marginBottom="@dimen/margin_tiny"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:background="?selectableItemBackground"

    android:maxHeight="50dp"


    >

    <RelativeLayout
        android:id="@+id/topic_list_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
       >


        <Button
            android:id="@+id/mcq_nav_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-thin"
            android:text="1"
            android:background="?selectableItemBackgroundBorderless"

            android:layout_centerInParent="true"
            android:textSize="30dp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/badge.blue"
            android:id="@+id/indicator_navigation_list"
            android:layout_alignEnd="@+id/mcq_nav_question_number"
            android:layout_alignStart="@+id/mcq_nav_question_number"
            android:layout_below="@+id/mcq_nav_question_number"

            />    </RelativeLayout>

</android.support.v7.widget.CardView>