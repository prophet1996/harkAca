<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="horizontal"


    >
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/questioncardview"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_question_prev"



        />
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/questioncardview"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/question"
            android:textColor="@color/fontcolorquestion"

            style="@style/Base.TextAppearance.AppCompat.Large"
            android:text="Q1:who are you?"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_below="@+id/question"
            android:id="@+id/radiogroup"

            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_margin="2dp"

                android:layout_height="wrap_content" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_margin="2dp"

                android:layout_height="wrap_content" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/option1"
            android:textColor="@color/fontcolorquestion"
            android:layout_below="@+id/question"
            android:layout_toRightOf="@+id/radiogroup"
            android:text="answer !1"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/fontcolorquestion"
android:id="@+id/option2"
                android:layout_below="@+id/option1"
                android:layout_toRightOf="@+id/radiogroup"
                android:text="answer !2"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/option3"
                android:textColor="@color/fontcolorquestion"
                android:layout_below="@+id/option2"
                android:layout_toRightOf="@+id/radiogroup"
                android:layout_margin="10dp"
                android:text="answer !3"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/option4"
                android:textColor="@color/fontcolorquestion"
                android:layout_margin="10dp"

                android:layout_below="@+id/option3"
                android:layout_toRightOf="@+id/radiogroup"
                android:text="answer !4"

                />


    </RelativeLayout>

</android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/questioncardview"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"

        android:src="@drawable/ic_next_question"


        />
</RelativeLayout>