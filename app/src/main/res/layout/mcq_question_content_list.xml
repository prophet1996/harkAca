<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    card_view:cardElevation="10dp"


    >

   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/question_number_textview_content"
    android:fontFamily="sans-serif-light"
    android:textSize="25sp"
    android:textColor="@android:color/black"
    card_view:layout_constraintTop_toTopOf="parent"
    card_view:layout_constraintStart_toStartOf="parent"


     /><TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="sans-serif-light"
       android:textSize="25sp"
       android:textColor="@android:color/black"

       android:id="@+id/question_textview_content"
       card_view:layout_constraintTop_toTopOf="parent"
       card_view:layout_constraintStart_toEndOf="@id/question_number_textview_content"
        />
       <android.support.v7.widget.AppCompatCheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/marked_checked"
           card_view:layout_constraintStart_toEndOf="parent"
           card_view:layout_constraintEnd_toStartOf="parent"
           card_view:layout_constraintHorizontal_bias="1.0"
           card_view:layout_constraintVertical_bias="0.0"
           card_view:layout_constraintTop_toBottomOf="parent"
           card_view:layout_constraintBottom_toTopOf="parent"
           />

<android.support.v7.widget.RecyclerView
    android:id="@+id/answers_recyclerView_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:layout_constraintStart_toStartOf="parent"
    card_view:layout_constraintEnd_toEndOf="parent"
android:visibility="gone"
    card_view:layout_constraintTop_toBottomOf="@+id/question_number_textview_content"

    >


</android.support.v7.widget.RecyclerView>

<android.support.v7.widget.AppCompatCheckedTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:text="hi"
    android:id="@+id/answer_one"
    android:checked="false"
    android:background="?selectableItemBackground"

    android:gravity="center"
    android:checkMark="@null"
    card_view:layout_constraintHorizontal_bias="0.0"
    android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"

    card_view:layout_constraintStart_toStartOf="parent"
    card_view:layout_constraintEnd_toEndOf="parent"
    card_view:layout_constraintTop_toBottomOf="@+id/question_number_textview_content"
    />


      <android.support.v7.widget.AppCompatCheckedTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="hi"
          android:checked="false"
          card_view:layout_constraintStart_toStartOf="parent"
          card_view:layout_constraintEnd_toEndOf="parent"
          card_view:layout_constraintHorizontal_bias="0.0"
          android:id="@+id/answer_two"
          android:checkMark="@null"
          android:background="?selectableItemBackground"

          android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"

          android:gravity="center"
          card_view:layout_constraintTop_toBottomOf="@+id/answer_one"
          />

      <android.support.v7.widget.AppCompatCheckedTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="hi"
          card_view:layout_constraintHorizontal_bias="0.0"
          android:checked="false"
          android:id="@+id/answer_three"
          android:background="?selectableItemBackground"

          android:gravity="center"
          android:checkMark="@null"
          android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"

          card_view:layout_constraintStart_toStartOf="parent"
          card_view:layout_constraintEnd_toEndOf="parent"
          card_view:layout_constraintTop_toBottomOf="@+id/answer_two"
          />

      <android.support.v7.widget.AppCompatCheckedTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?selectableItemBackground"

          android:text="hi"
          android:id="@+id/answer_four"

          android:checked="false"
          android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
          card_view:layout_constraintStart_toStartOf="parent"
          card_view:layout_constraintEnd_toEndOf="parent"
          android:checkMark="@null"
          card_view:layout_constraintHorizontal_bias="0.0"
          android:gravity="center"
          card_view:layout_constraintTop_toBottomOf="@+id/answer_three"
          />
   </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>